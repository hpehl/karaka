<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        div.startStopContainer {
            padding: 20px 68px 0px 68px;
        }
        
        .startStopImg {
            -webkit-border-radius: 33px;
            -moz-border-radius: 33px;
            border-radius: 33px;
        }
        
        .startStopImg:hover {
            -moz-box-shadow: 0 0 25px #3cc5de;
            -webkit-box-shadow: 0 0 25px #3cc5de;
            box-shadow: 0 0 25px #3cc5de;
        }
        
        div.infoContainer {
            color: #3d3d3d;
            padding: 20px;
            text-align: center;
        }
        
        .day {
            font-size: 24px;
            font-weight: bold;
            cursor: help;
        }
        
        .weekAndMonth {
            font-size: 12px;
            padding-top: 5px;
            cursor: help;
        }
        
        .description {
            padding-top: 20px;
        }
        
        .project {
            padding-top: 5px;
        }
        
        .description,.project {
            font-size: 12px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.startStopContainer}">
            <div class="{style.startStopImg}">
                <g:Image ui:field="startStop" />
            </div>
        </div>
        <div class="{style.infoContainer}">
            <g:Label ui:field="today" title="Today" addStyleNames="{style.day}">12:34</g:Label>
            <div class="{style.weekAndMonth}">
                <g:InlineLabel ui:field="week" title="Current week">34:12</g:InlineLabel>&nbsp;&mdash;&nbsp;<g:InlineLabel ui:field="month"  title="Current month">123:55</g:InlineLabel>
            </div>
            <g:Label ui:field="description" addStyleNames="{style.description}">Some description</g:Label>
            <g:Label ui:field="project" addStyleNames="{style.project}">Some project</g:Label>
        </div>
    </g:HTMLPanel>

</ui:UiBinder> 