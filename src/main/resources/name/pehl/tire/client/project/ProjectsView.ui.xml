<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tap="urn:import:name.pehl.tire.client.project">

    <ui:style>
        .table {
            width: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="52">
            <g:HTML>
                <h1>Projects</h1>
            </g:HTML>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <tap:ProjectsTable ui:field="projectsTable" addStyleNames="{style.table}" />
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 