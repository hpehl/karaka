<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tui="urn:import:name.pehl.tire.client.ui">

	<ui:style>
		.popup {
			padding: 10px;
			border: #93cb2b solid 2px;
			background-color: white;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
			border-radius: 5px;
			box-shadow: 2px 2px 2px #3d3d3d;
			-moz-box-shadow: 2px 2px 2px #3d3d3d;
			-webkit-box-shadow: 2px 2px 2px #3d3d3d;
		}
		
		.popup input,.popup textarea {
			width: 100%;
		}
		
		ul.columns li {
			float: left;
			width: 25%;
			padding-left: 5px;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
			-webkit-box-sizing: border-box;
		}
		
		ul.columns li:first-child {
			padding-left: 0;
		}
		
		div.controls {
			margin-top: 2em;
		}
		
		div.controls button {
			margin-left: 5px;
			float: right;
			width: 8em;
		}
		
		.spacebelow {
			margin-bottom: 8px;
		}
	</ui:style>

	<tui:EscapablePopupPanel animationEnabled="false"
		autoHideEnabled="true" modal="true" glassEnabled="true" addStyleNames="{style.popup}">
		<g:HTMLPanel>
			<div class="{style.spacebelow}">
				<tui:Html5TextBox ui:field="name" placeholder="Name"
					title="Name" autofocus="autofocus" />
				<!-- <input type="text" name="name" placeholder="Name" title="Name" -->
				<!-- autofocus="autofocus" /> -->
			</div>
			<div class="{style.spacebelow}">
				<tui:Html5TextArea ui:field="description"
					placeholder="Description" title="Description" visibleLines="3"></tui:Html5TextArea>
				<!-- <textArea name="description" placeholder="Description" -->
				<!-- title="Description" visibleLines="3"></textArea> -->
			</div>
			<ul class="{style.columns}">
				<li>
					<tui:TimeTextBox ui:field="start" placeholder="Start"
						title="Start" />
					<!-- <input type="text" name="start" placeholder="Start" title="Start" 
						/> -->
				</li>
				<li>
					<tui:TimeTextBox ui:field="end" placeholder="End"
						title="End" />
					<!-- <input type="text" name="end" placeholder="End" title="End" /> -->
				</li>
				<li>
					<tui:Html5TextBox ui:field="pause" placeholder="Pause"
						title="Pause" />
					<!-- <input type="text" name="pause" placeholder="Pause" title="Pause" 
						/> -->
				</li>
				<li style="float: right;">
					<tui:Html5TextBox ui:field="duration" placeholder="Duration"
						title="Duration" addStyleNames="{style.spacebelow}" />
					<!-- <input type="text" name="duration" placeholder="Duration" -->
					<!-- title="Duration" class="{style.spacebelow}" /> -->
				</li>
			</ul>
			<div class="{style.spacebelow}">
				<tui:Html5TextBox ui:field="tags" placeholder="Tags"
					title="Tags" />
				<!-- <input type="text" name="tags" placeholder="Tags" title="Tags" /> -->
			</div>
			<div>
				<tui:Html5TextBox ui:field="project" placeholder="Project"
					title="Project" />
				<!-- <input type="text" name="project" placeholder="Project" title="Project" 
					/> -->
			</div>
			<div class="{style.controls}">
				<button>Cancel</button>
				<button>Save</button>
			</div>
			<div style="clear: right;"></div>
		</g:HTMLPanel>
	</tui:EscapablePopupPanel>
</ui:UiBinder> 