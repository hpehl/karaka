<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:tui="urn:import:name.pehl.tire.client.ui" xmlns:tac="urn:import:name.pehl.tire.client.activity.view">

	<ui:style>
		div.newActivity {
			font-size: 18px;
			color: white;
			padding-bottom: 20px;
			background-color: #3cc5de;
			-webkit-border-top-left-radius: 5px;
			-webkit-border-top-right-radius: 5px;
			-moz-border-radius-topleft: 5px;
			-moz-border-radius-topright: 5px;
			border-top-left-radius: 5px;
			border-top-right-radius: 5px;
		}
		
		div.newActivity ul {
			padding: 20px 10px 0px 10px;
		}
		
		div.newActivity ul li a {
			float: left;
			cursor: pointer;
			padding: 5px;
			margin-right: 5px;
			text-transform: uppercase;
			background-color: #1b92a8;
			border-top-left-radius: 5px;
			border-top-right-radius: 5px;
			-webkit-border-top-left-radius: 5px;
			-webkit-border-top-right-radius: 5px;
			-moz-border-radius-topleft: 5px;
			-moz-border-radius-topright: 5px;
		}
		
		div.newActivity ul li a:hover {
			color: #68d6ea;
			background-color: white;
		}
		
		div.input {
			clear: left;
			padding: 5px;
			background-color: #68d6ea;
			height: 40px;
		}
		
		div.input span {
			display: inline;
			padding: 5px;
			margin: 0;
			overflow: hidden;
			box-sizing: border-box;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
		}
		
		div.input input[type=text] {
			width: 100%;
			font-size: 16px;
			line-height: 16px;
		}
		
		div.input span.activityHolder {
			float: left;
			width: 60%;
		}
		
		div.input span.projectHolder {
			float: left;
			width: 25%;
		}
		
		div.input span.timeHolder {
			float: left;
			width: 15%;
		}
		
		h1.noBorder {
			line-height: 32px;
			margin-bottom: 3px;
			border-bottom: none !important;
		}
		
		h1.noBorder>span {
			cursor: help;
		}
		
		.navigation {
			cursor: default;
			display: inline;
			float: right;
		}
		
		.navigation span {
			padding: 2px;
			cursor: pointer;
		}
		
		.table {
			width: 100%;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX">
