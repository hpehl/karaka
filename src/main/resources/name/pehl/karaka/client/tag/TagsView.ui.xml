<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tag="urn:import:name.pehl.karaka.client.tag">

    <ui:style>
        .table {
            width: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="52">
            <g:HTML>
                <h1>Tags</h1>
            </g:HTML>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <tag:TagsTable ui:field="tagsTable" addStyleNames="{style.table}" />
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 