<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .noBorder {
            margin-bottom: 3px;
            border-bottom: none !important;
        }
        
        .navigation {
            font-weight: normal;
            font-style: normal;
            text-align: right;
            font-size: 12px;
            display: inline;
            float: right;
        }
        
        .navigation td {
            padding: 2px;
            text-align: center;
            vertical-align: middle;
        }
        
        .navigation td span.arrow {
            font-size: 24px;
            padding-left: 6px;
            padding-right: 6px;
        }
        
        .navigation td span.link {
            cursor: pointer;
        }
        
        /*
                .navigation td span.link:hover {
                    color: white;
                    background-color: #3d3d3d;
                }
                */
        .container {
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            -o-box-sizing: border-box;
            -icab-box-sizing: border-box;
            -khtml-box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
        
        .table {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel>
        <h1 class="{style.noBorder}">
            Recent Activities
            <div class="{style.navigation}">
                <table>
                    <tr>
                        <td>
                            <g:InlineLabel ui:field="previous" addStyleNames="{style.link} {style.arrow}"
                                title="Previous calendarweek">&#8612;</g:InlineLabel>
                        </td>
                        <td>
                            <g:InlineHTML ui:field="info" addStyleNames="{style.link}" title="Current calendarweek" />
                        </td>
                        <td>
                            <g:InlineLabel ui:field="next" addStyleNames="{style.link} {style.arrow}"
                                title="Next calendarweek">&#8614;</g:InlineLabel>
                        </td>
                    </tr>
                </table>
            </div>
        </h1>
        <div class="{style.container}">
            <c:CellTable ui:field="activitiesTable" addStyleNames="{style.table}" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder> 