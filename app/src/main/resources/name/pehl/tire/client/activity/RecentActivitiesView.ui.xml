<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .noBorder {
            margin-bottom: 3px;
            border-bottom: none !important;
        }
        
        .navigation {
            line-height: 16px;
            font-weight: normal;
            font-style: normal;
            text-align: right;
            font-size: 12px;
            display: inline;
            float: right;
        }
        
        .navigation span {
            padding: 2px;
            cursor: pointer;
        }
        
        .navigation span:hover {
            color: white;
            background-color: #3d3d3d;
        }
        
        .container {
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            -o-box-sizing: border-box;
            -icab-box-sizing: border-box;
            -khtml-box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
        
        .table {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel>
        <h1 class="{style.noBorder}">
            Recent Activities
            <div class="{style.navigation}">
                <g:InlineLabel ui:field="rangeInfo" />
                <br />
                <span>
                    <g:InlineLabel ui:field="previous">&#8612;</g:InlineLabel>
                    <g:InlineLabel ui:field="lastMonth">Last Month</g:InlineLabel>
                    <g:InlineLabel ui:field="lastWeek">Last Week</g:InlineLabel>
                    <g:InlineLabel ui:field="currentMonth">Current Month</g:InlineLabel>
                    <g:InlineLabel ui:field="currentWeek">Current Week</g:InlineLabel>
                    <g:InlineLabel ui:field="next">&#8614;</g:InlineLabel>
                </span>
            </div>
        </h1>
        <div class="{style.container}">
            <c:CellTable ui:field="activitiesTable" addStyleNames="{style.table}" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder> 