<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="nameTokens" type="name.pehl.tire.client.NameTokens" />
    <ui:image field="header" repeatStyle="Horizontal" src="resources/header.png" />
    <ui:style field="common" src="resources/common.css" />
        
    <ui:style src="resources/colors.css">
        @sprite header {
            color: white;
            gwt-image: "header";
            padding: 0px 30px;
        }
        
        header a {
            font-size: 12px;
            float: left;
            color: white;
            line-height: 30px;
            padding: 0px 5px;
        }
        
        header a.right {
            float: right;
        }
        
        header a:hover {
            color: grey2;
            background-color: white;
        }
        
        .mainPanel {
            margin: 20px 2px 20px 30px;
        }
        
        aside {
            margin: 20px 30px 20px 0px;
        }
        
        .statusPanel {
            margin-left: 18px;
        }
        
        aside nav {
            margin-top: 20px;
            border-left: 3px solid green4;
        }
        
        aside nav a {
            font-size: 12px;
            color: green4;
            background-color: green0;
            display: block;
            line-height: 20px;
            text-transform: uppercase;
            letter-spacing: 3px;
            padding: 5px 5px 5px 10px;
            border-top: 1px solid green2;
            border-right: 1px solid green2;
            border-bottom: 1px solid green2;
            -webkit-border-top-right-radius: 20px;
            -webkit-border-bottom-right-radius: 20px;
            -moz-border-radius-topright: 20px;
            -moz-border-radius-bottomright: 20px;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
        }
        
        aside nav a:hover,aside nav a.selected {
            color: white;
            background-color: green4;
        }
        
        footer {
            padding: 0px 30px;
        }
        
        footer a {
            font-size: 10px;
            float: left;
            color: grey2;
            line-height: 20px;
            padding: 0px 5px;
        }
        
        footer a:hover {
            color: black;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="30">
            <g:HTMLPanel>
                <header>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.dashboard}">TiRe</g:InlineHyperlink>
                    <a class="{style.right}" title="Logout" href="#">Logged in as Harald Pehl</a>
                    <g:InlineHyperlink addStyleNames="{style.right}" targetHistoryToken="{nameTokens.settings}">Settings</g:InlineHyperlink>
                    <g:InlineHyperlink addStyleNames="{style.right}" targetHistoryToken="{nameTokens.help}">Help</g:InlineHyperlink>
                </header>
            </g:HTMLPanel>
        </g:north>
        <g:south size="20">
            <g:HTMLPanel>
                <footer>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.about}">About</g:InlineHyperlink>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.help}">Help</g:InlineHyperlink>
                    <g:InlineHyperlink targetHistoryToken="{nameTokens.terms}">Terms</g:InlineHyperlink>
                </footer>
            </g:HTMLPanel>
        </g:south>
        <g:east size="250">
            <g:ScrollPanel>
                <g:HTMLPanel>
                    <aside>
                        <g:FlowPanel ui:field="statusPanel" addStyleNames="{style.statusPanel} {common.whiteBox}"></g:FlowPanel>
                        <nav>
                            <g:InlineHyperlink targetHistoryToken="{nameTokens.dashboard}"
                                addStyleNames="{style.selected}">Dashboard</g:InlineHyperlink>
                            <g:InlineHyperlink targetHistoryToken="{nameTokens.projects}">Projects</g:InlineHyperlink>
                            <g:InlineHyperlink targetHistoryToken="{nameTokens.clients}">Clients</g:InlineHyperlink>
                            <g:InlineHyperlink targetHistoryToken="{nameTokens.tags}">Tags</g:InlineHyperlink>
                            <g:InlineHyperlink targetHistoryToken="{nameTokens.reports}">Reports</g:InlineHyperlink>
                        </nav>
                    </aside>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:east>
        <g:center>
            <g:ScrollPanel ui:field="mainPanel" addStyleNames="{style.mainPanel} {common.whiteBox}"></g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 