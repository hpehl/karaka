<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="name.pehl.tire.client.resources.Resources"></ui:with>
    <ui:style src="resources/colors.css">
        div.top {
            color: white;
        }
        
        div.nav {
            background-color: green2;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="30">
            <g:HTML>
                <div class="{style.top} {res.backgrounds.top}">TOP</div>
            </g:HTML>
        </g:north>
        <g:east size="150">
            <g:HTML>
                <div class="{style.nav}">NAV</div>
            </g:HTML>
        </g:east>
        <g:center>
            <g:FlowPanel ui:field="mainContent"></g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 