<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        div.startStopContainer {
            padding: 20px 68px 0px 68px;
        }
        
        .startStopImg {
            -webkit-border-radius: 33px;
            -moz-border-radius: 33px;
            border-radius: 33px;
        }
        
        .startStopImg:hover {
            -moz-box-shadow: 0 0 25px #3cc5de;
            -webkit-box-shadow: 0 0 25px #3cc5de;
            box-shadow: 0 0 25px #3cc5de;
        }
        
        div.infoContainer {
            color: #3d3d3d;
            padding: 20px;
            text-align: center;
        }
        
        div.timeContainer {
            padding: 0px 15px;
        }
        
        .dayTime {
            font-size: 24px;
            font-weight: bold;
            float: left;
        }
        
        .monthTime,.weekTime {
            font-size: 12px;
            float: right;
            clear: right;
        }
        
        .description {
            padding-top: 20px;
            clear: left;
            font-size: 12px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .project {
            padding-top: 5px;
            font-size: 12px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.startStopContainer}">
            <div class="{style.startStopImg}">
                <g:Image ui:field="startStop" />
            </div>
        </div>
        <div class="{style.infoContainer}">
            <div class="{style.timeContainer}">
                <g:Label title="Today" addStyleNames="{style.dayTime}">12:34</g:Label>
                <g:Label title="Current week" addStyleNames="{style.weekTime}">34:12</g:Label>
                <g:Label title="Current month" addStyleNames="{style.monthTime}">123:55</g:Label>
            </div>
            <g:Label addStyleNames="{style.description}">Some description</g:Label>
            <g:Label addStyleNames="{style.project}">Some project</g:Label>
        </div>
    </g:HTMLPanel>

</ui:UiBinder> 