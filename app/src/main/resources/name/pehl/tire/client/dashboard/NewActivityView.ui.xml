<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:t="urn:import:name.pehl.tire.client.dashboard">

    <ui:style field="datepicker" src="../resources/datepicker.css" />
        
    <ui:style>
        div.newActivity {
            font-size: 18px;
            color: white;
            padding-bottom: 20px;
            background-color: #3cc5de;
            -webkit-border-top-left-radius: 5px;
            -webkit-border-top-right-radius: 5px;
            -moz-border-radius-topleft: 5px;
            -moz-border-radius-topright: 5px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }
        
        div.newActivity ul {
            padding: 20px 10px 0px 10px;
        }
        
        div.newActivity ul li a {
            float: left;
            cursor: pointer;
            padding: 5px;
            margin-right: 5px;
            text-transform: uppercase;
            background-color: #1b92a8;
        }
        
        div.newActivity ul li a:hover {
            color: #68d6ea;
            background-color: white;
        }
        
        div.input {
            clear: left;
            padding: 10px;
            vertical-align: middle;
            background-color: #68d6ea;
            height: 30px;
        }
        
        div.input input {
            color: #dedede;
            font-size: 18px;
            border: none;
            width: 100%;
            height: 26px;
        }
        
        div.input div.description {
            float: left;
            width: 50%;
        }
        
        div.input div.project {
            float: left;
            width: 38%;
            margin: 0px 1%;
        }
        
        div.input div.time {
            float: left;
            width: 10%;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.newActivity}">
            <ul>
                <li>
                    <g:InlineHyperlink ui:field="theDayBeforeYesterday"></g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink ui:field="yesterday"></g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink ui:field="today">today</g:InlineHyperlink>
                </li>
                <li>
                    <t:CalendarWidget ui:field="calendar">calendar</t:CalendarWidget>
                    <!-- <g:InlineHyperlink ui:field="calendar">calendar</g:InlineHyperlink> -->
                </li>
            </ul>
            <div class="{style.input}">
                <div class="{style.description}">
                    <g:TextBox value="DESCRIPTION" />
                </div>
                <div class="{style.project}">
                    <g:TextBox value="PROJECT" />
                </div>
                <div class="{style.time}">
                    <g:TextBox value="TIME" />
                </div>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder> 