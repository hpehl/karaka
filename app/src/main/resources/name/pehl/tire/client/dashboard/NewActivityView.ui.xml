<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style src="../resources/colors.css">
        div.newActivity {
            font-size: 18px;
            color: white;
            padding-bottom: 20px;
            background-color: turquoise2;
            -webkit-border-top-left-radius: 5px;
            -webkit-border-top-right-radius: 5px;
            -moz-border-radius-topleft: 5px;
            -moz-border-radius-topright: 5px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }
        
        div.newActivity ul {
            padding: 20px 10px 0px 10px;
        }
        
        div.newActivity ul li {
            float: left;
            cursor: pointer;
            padding: 5px;
            margin-left: 5px;
            text-transform: uppercase;
            background-color: turquoise5;
        }
        
        div.newActivity ul li:first {
            margin-left: 10px;
        }
        
        div.newActivity ul li.selected {
            background-color: turquoise6;
        }
        
        div.newActivity ul li:hover,div.newActivity ul li.selected:hover {
            color: turquoise6;
            background-color: white;
        }
        
        div.input {
            clear: left;
            padding: 10px;
            vertical-align: middle;
            background-color: turquoise6;
        }
        
        div.input input {
            color: grey1;
            font-size: 18px;
            line-height: 18px;
            padding: 2px;
            margin-right: 5px;
            border: none;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.newActivity}">
            <ul>
                <li>
                    <g:InlineHyperlink ui:field="theDayBeforeYesterday"></g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink ui:field="yesterday"></g:InlineHyperlink>
                </li>
                <li class="{style.selected}">
                    <g:InlineHyperlink ui:field="today">today</g:InlineHyperlink>
                </li>
                <li>
                    <g:InlineHyperlink ui:field="calendar">calendar</g:InlineHyperlink>
                </li>
            </ul>
            <div class="{style.input}">
                <input type="text" value="DESCRIPTION" style="width: 320px;" />
                <input type="text" value="PROJECT" style="width: 180px;" />
                <input type="text" value="TIME" style="width: 80px;" />
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder> 