<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="tire">

    <!-- GWT -->
    <inherits name="com.google.gwt.inject.Inject" />
    <inherits name="com.google.gwt.json.JSON" />
    <inherits name="com.google.gwt.uibinder.UiBinder" />
    <inherits name="com.google.gwt.user.User" />

    <!-- name.pehl -->
    <inherits name="name.pehl.totoe.Totoe" />
    <inherits name="name.pehl.piriti.Piriti" />
    <inherits name="name.pehl.piriti.restlet.PiritiRestlet" />

    <!-- Restlet -->
    <inherits name="org.restlet.Restlet" />

    <!-- GWTP -->
    <inherits name="com.gwtplatform.dispatch.Dispatch" />
    <inherits name="com.gwtplatform.mvp.Mvp" />

    <entry-point class="name.pehl.tire.client.Tire" />
    <source path="client">
        <exclude name="gwttest" />
        <exclude name="**/*Test.java" />
    </source>

    <script src="raphael-min.js" />
    <script src="g.raphael.js" />
    <script src="g.bar.js" />

    <stylesheet src="tire.css" />
    <stylesheet src="widgets.css" />

    <define-configuration-property name="gin.ginjector" is-multi-valued="false" />
    <set-configuration-property name="gin.ginjector" value="name.pehl.tire.client.gin.TireGinjector" />

</module>
